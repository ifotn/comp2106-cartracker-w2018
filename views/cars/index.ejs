<% include ../shared/header %>

<h1>Car Inventory</h1>

<a href="/cars/add">Add a New Car</a>

<table class="table table-striped table-hover">
    <tr>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
    </tr>
    <% for(let i = 0; i < cars.length; i++) { %>
        <tr>
            <td><%= cars[i].make %></td>
            <td><%= cars[i].model %></td>
            <td><%= cars[i].year %></td>
        </tr>
    <% } %>
</table>

<% include ../shared/footer %>